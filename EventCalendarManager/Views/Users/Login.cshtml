@model EventCalendarManager.Models.User

@{
    ViewData["Title"] = "Login";
}
<br />
<h2 style="padding-left:30px">Login</h2>
<link href="~/css/style.css" rel="stylesheet" />
<script src="~/js/bootstrap.js"></script>
<script src="~/js/jquery-1.10.2.js"></script>
<br /><link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<br />
<hr />

@if (Model != null)
{
    <h5 style="color:red">Invalid Username or Password</h5>
}

<body style="background: linear-gradient(rgba(255,255,255,.6), rgba(255,255,255,.6)), url('https://decocards.files.wordpress.com/2009/12/decemberr-09-torn-pages-calendar-1680x1050.jpg');background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    ">
    <header>
        <div class="navbar navbar-default navbar-fixed-top text-uppercase">
            <div class="container">
                <div class="navbar-header">
                    <a href="../.." class="navbar-brand"><i class="fa fa-home" style="font-size:20px;color:gray"></i>   Home</a>
                    <a href="~/Users/Calendar" class="navbar-brand"><i class="fa fa-address-card" style="font-size:20px;color:gray"></i>  Calendar</a>
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="~/Users/Create">Register  <i class="fa fa-user-plus" style="font-size:20px;color:gray"></i></a> </li>
                        <li><a href="~/Users/Login">Login  <i class="fa fa-user-circle" style="font-size:20px;color:gray"></i></a> </li>
                    </ul>
                </div>
            </div>
        </div>
    </header>

    <main style="height:330px">
        <div class="container body-content span=8 offset=2">
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Login">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="control-label"></label>
                            <input asp-for="Password" class="form-control" type="password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <br /><br />
                        <div class="form-group">
                            <input type="submit" value="Login" class="btn btn-default" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>
</body>
